extends layout 
 
block content 
  h1= title 
 
  form(id='flowersForm', action="/resource/flowers", method="POST") 
    div.form-group 
        label.flowersAttr(for='flowers_type') flowers type:  
        input#flowers_type(type='text', name='flowers_type') 
    div.form-group 
        label.flowersAttr(for='size') flowers color:  
        input#color(type="text")(type='text', name='size') 
    div.form-group 
        label.flowersAttr(for='cost') flowers cost:  
        input#cost(type='number', name='cost') 
    input(type="submit") 

    button(onclick="window.location.href='/flowers'") Cancel 
 
  script. 
    document.forms['flowersForm'].addEventListener('submit', (event) => { 
      event.preventDefault(); 
      // TODO do something here to show user that form is being submitted 
      fetch(event.target.action, { 
        method: 'POST', 
        body: new URLSearchParams(new FormData(event.target)) // event.target is the form 
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Save succeded") 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Save failed " + error ) 
      }); 
    }); 